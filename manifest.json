{
  "manifest_version": 3,
  "name": "斗鱼助手",
  "version": "0.1.0",
  "description": "简化播放界面,适配暗黑模式",
  "icons": {
    "16": "icons/斗鱼TV-16.png",
    "32": "icons/斗鱼TV-32.png",
    "48": "icons/斗鱼TV-48.png",
    "128": "icons/斗鱼TV-128.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://www.doseeing.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.douyu.com/topic/*",
        "https://www.douyu.com/1*",
        "https://www.douyu.com/2*",
        "https://www.douyu.com/3*",
        "https://www.douyu.com/4*",
        "https://www.douyu.com/5*",
        "https://www.douyu.com/6*",
        "https://www.douyu.com/7*",
        "https://www.douyu.com/8*",
        "https://www.douyu.com/9*",
        "https://yuba.douyu.com/*"
      ],
      "css": [ "src/style.css" ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://www.douyu.com/topic/*",
        "https://www.douyu.com/1*",
        "https://www.douyu.com/2*",
        "https://www.douyu.com/3*",
        "https://www.douyu.com/4*",
        "https://www.douyu.com/5*",
        "https://www.douyu.com/6*",
        "https://www.douyu.com/7*",
        "https://www.douyu.com/8*",
        "https://www.douyu.com/9*"
      ],
      "js": [ "src/content_player.js" ]
    },
    {
      "matches": [ "https://yuba.douyu.com/*" ],
      "css": [ "src/yuba.css" ],
      "run_at": "document_start"
    },
    {
      "matches": [ "https://yuba.douyu.com/*" ],
      "js": [ "src/content_yuba.js" ]
    }
  ],
  "background": {
    "service_worker": "src/service_worker.js"
  }
}